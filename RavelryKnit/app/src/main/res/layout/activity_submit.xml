<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:text="@string/submit_title"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/project_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_craft"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/project_craft"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_pattern_name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/project_pattern_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_picture"
            android:textSize="20sp" />

        <Button
            android:id="@+id/project_picture"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/project_take_picture"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/project_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_notes"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/project_notes"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_yarn"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/project_yarn"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_yarn_color"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/project_yarn_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/project_yarn_weight"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/project_yarn_weight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/project_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/project_submit" />

    </LinearLayout>
</ScrollView>
